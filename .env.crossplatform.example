# AllinONE 跨平台集成配置
# 复制此文件为 .env 并根据实际情况配置

# AllinONE API 基础地址
VITE_API_BASE_URL=http://localhost:3000/api

# New Day 游戏地址(如果需要)
VITE_NEW_DAY_URL=https://your-newday-domain.com

# Token 配置
VITE_TOKEN_EXPIRY_HOURS=24

# 跨平台功能开关
VITE_ENABLE_CROSS_PLATFORM=true
VITE_ENABLE_NEW_DAY_INTEGRATION=true

# 市场配置
VITE_MARKET_DEFAULT_PAGE_SIZE=20
VITE_MARKET_MAX_PAGE_SIZE=100

# 钱包配置
VITE_WALLET_MIN_TRANSFER_AMOUNT=1
VITE_WALLET_MAX_TRANSFER_AMOUNT=10000
